# Pinata IPFS Storage Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env files to git - they are already in .gitignore

# Pinata API Credentials
# Get these from: https://app.pinata.cloud/keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_token_here

# Optional: Custom Pinata Gateway (if you have a dedicated gateway)
PINATA_GATEWAY_URL=https://your-gateway.mypinata.cloud

# Solana Configuration
SOLANA_NETWORK=devnet
RPC_URL=https://api.devnet.solana.com

# Token Configuration
TOKEN_MINT_ADDRESS=your_token_mint_address_here
METADATA_URI=https://red-adorable-dove-755.mypinata.cloud/ipfs/bafkreigb2axwu5qxqq5ytl5625murmjcpget5nqwxtcd3jc62m4nibk7f4

# Wallet Configuration (choose one method)
# Method 1: Private key as base58 string
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Method 2: Private key as JSON array (alternative)
# WALLET_PRIVATE_KEY=[1,2,3,4,...] # your 64-byte array